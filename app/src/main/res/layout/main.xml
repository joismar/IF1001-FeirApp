<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<LinearLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#EF6C00"
		android:orientation="horizontal"
		android:paddingLeft="10dp"
		android:paddingTop="8dp"
		android:paddingRight="10dp"
		android:paddingBottom="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/minha_feira"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

		<LinearLayout
			android:id="@+id/linear18"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="right|center_vertical"
			android:orientation="horizontal">

			<Button
				android:id="@+id/share"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:background="@drawable/share"
				android:textColor="#000000"
				android:textSize="12sp" />

            <Button
				android:id="@+id/menu"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:background="@drawable/ic_more_vert_white"
				android:backgroundTint="#FDFCFC"
				android:padding="8dp"
				android:textColor="#000000"
				android:textSize="12sp" />

        </LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/backgroung"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="#880E4F"
		android:gravity="top"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/tabscontent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#EF6C00"
			android:elevation="4dp"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/lineartab1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<LinearLayout
					android:id="@+id/tab1adapter"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:paddingTop="8dp"
					android:paddingBottom="8dp">

					<ImageView
						android:id="@+id/imagecart"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:scaleType="center"
						android:src="@drawable/ic_local_grocery_store_white" />

					<TextView
						android:id="@+id/tab1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:paddingTop="5dp"
						android:text="CARRINHO"
						android:textColor="#FFFFFF"
						android:textSize="14sp"
						android:textStyle="bold" />
				</LinearLayout>

				<LinearLayout
					android:id="@+id/footab1"
					android:layout_width="match_parent"
					android:layout_height="3dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:padding="8dp" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/lineartab2"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="vertical">

				<LinearLayout
					android:id="@+id/tab2adapter"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:paddingTop="8dp"
					android:paddingBottom="8dp">

					<ImageView
						android:id="@+id/imagecheck"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:alpha="0.6"
						android:scaleType="center"
						android:src="@drawable/ic_assignment_turned_in_white" />

					<TextView
						android:id="@+id/tab2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:alpha="0.6"
						android:gravity="center_horizontal|center_vertical"
						android:paddingTop="5dp"
						android:text="LISTA DE COMPRAS"
						android:textColor="#FFFFFF"
						android:textSize="14sp"
						android:textStyle="bold" />
				</LinearLayout>

				<LinearLayout
					android:id="@+id/footab2"
					android:layout_width="match_parent"
					android:layout_height="3dp"
					android:background="#EF6C00"
					android:orientation="horizontal"
					android:padding="8dp" />
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/innerscroll"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/tabadd"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:paddingLeft="0dp"
				android:paddingRight="0dp"
				android:paddingBottom="0dp"
				tools:visibility="visible">

				<LinearLayout
					android:id="@+id/linear_list1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#AD1457"
					android:elevation="0dp"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					android:paddingLeft="0dp"
					android:paddingTop="10dp"
					android:paddingRight="0dp"
					android:paddingBottom="0dp"
					android:translationZ="0dp">

					<TextView
						android:id="@+id/warn1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:alpha="0.6"
						android:gravity="center"
						android:padding="8dp"
						android:text="Nada aqui. Adicione um novo item."
						android:textColor="#FFFFFF"
						android:textSize="12sp" />

					<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/carrinhoLista"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dp"
						android:layout_marginRight="15dp"
						android:layout_marginBottom="10dp">

					</androidx.recyclerview.widget.RecyclerView>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/tabshoplist"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:padding="0dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingBottom="5dp"
				tools:visibility="visible">

				<LinearLayout
					android:id="@+id/linear_list2"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#AD1457"
					android:elevation="0dp"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					android:paddingLeft="15dp"
					android:paddingTop="10dp"
					android:paddingRight="15dp"
					android:paddingBottom="10dp">

					<TextView
						android:id="@+id/warn2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:alpha="0.6"
						android:gravity="center"
						android:padding="8dp"
						android:text="Nada aqui. Adicione um novo item."
						android:textColor="#FFFFFF"
						android:textSize="12sp" />

					<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/listaView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" />
				</LinearLayout>

			</LinearLayout>

            <LinearLayout
                android:id="@+id/totalview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:background="#A31552"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                tools:visibility="visible">

				<LinearLayout
					android:id="@+id/limiteView"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:baselineAligned="false"
					android:orientation="horizontal"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">

					<TextView
						android:id="@+id/textView2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_weight="1"
						android:gravity="bottom"
						android:text="LIMITE: "
						android:textColor="#FFFFFF"
						android:textSize="16dp" />

					<TextView
						android:id="@+id/textview"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:gravity="bottom"
						android:text="R$ "
						android:textColor="#FCFAFA"
						android:textSize="12sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/limiteText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_weight="1"
						android:gravity="bottom"
						android:text="200.00"
						android:textColor="#FFFF"
						android:textSize="16dp"
						android:textStyle="bold" />
				</LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

					<TextView
						android:id="@+id/textview6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:gravity="bottom"
						android:text="TOTAL: "
						android:textColor="#FFFFFF"
						android:textSize="16dp" />

					<TextView
						android:id="@+id/textview9"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:gravity="bottom"
						android:text="R$ "
						android:textColor="#FCFAFA"
						android:textSize="12sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/total"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_marginLeft="0dp"
						android:gravity="bottom"
						android:text="0.00"
						android:textColor="#FCFBFC"
						android:textSize="16dp"
						android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/footer"
		android:layout_width="match_parent"
		android:layout_height="75dp"
		android:background="#EF6C00"
		android:elevation="6dp"
		android:gravity="right|center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:translationZ="5dp">

		<LinearLayout
			android:id="@+id/linear_input1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="0dp"
			android:background="@drawable/rndcorn"
			android:elevation="2dp"
			android:orientation="horizontal"
			tools:visibility="visible">

			<EditText
				android:id="@+id/input_nome"
				android:layout_width="wrap_content"
				android:layout_height="50dp"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:capitalize="sentences"
				android:gravity="center|left"
				android:hint="Produto"
				android:imeOptions="actionNext"
				android:paddingStart="15dp"
				android:singleLine="true"
				android:textColor="#690b3d"
				android:textColorHint="#9E9E9E"
				android:textSize="16sp" />

			<LinearLayout
				android:id="@+id/spacer1"
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:background="#F8BBD0"
				android:orientation="vertical"
				android:padding="8dp"></LinearLayout>

			<EditText
				android:id="@+id/input_preco"
				android:layout_width="90dp"
				android:layout_height="50dp"
				android:autoLink="none"
				android:autoText="false"
				android:background="#FCE4EC"
				android:hint="PreÃ§o"
				android:imeOptions="actionNext"
				android:inputType="numberDecimal"
				android:lines="1"
				android:paddingStart="10dp"
				android:paddingEnd="8dp"
				android:textColor="#690b3d"
				android:textColorHint="#9E9E9E"
				android:textSize="16sp" />

			<LinearLayout
				android:id="@+id/spacer2"
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:background="#F8BBD0"
				android:orientation="vertical"
				android:padding="8dp"></LinearLayout>

			<EditText
				android:id="@+id/input_qtde"
				android:layout_width="70dp"
				android:layout_height="50dp"
				android:background="@android:color/transparent"
				android:hint="Qtde."
				android:imeOptions="actionDone"
				android:inputType="numberDecimal"
				android:lines="1"
				android:paddingLeft="10dp"
				android:paddingRight="8dp"
				android:singleLine="true"
				android:textColor="#690b3d"
				android:textColorHint="#9E9E9E"
				android:textSize="16sp" />
		</LinearLayout>

		<Button
			android:id="@+id/add"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="8dp"
			android:text="Adicionar"
			android:textColor="#FFFFFF"
			android:textSize="12sp"
			android:textStyle="bold"
			android:visibility="gone" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/footer2"
		android:layout_width="match_parent"
		android:layout_height="75dp"
		android:background="#EF6C00"
		android:elevation="6dp"
		android:gravity="right|center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:translationZ="5dp">

		<EditText
			android:id="@+id/inputproduto"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_margin="0dp"
			android:background="@drawable/rndcorn"
			android:capitalize="words"
			android:elevation="2dp"
			android:hint="Produto"
			android:imeOptions="actionDone"
			android:lines="1"
			android:paddingStart="15dp"
			android:paddingRight="8dp"
			android:singleLine="true"
			android:textColor="#690b3d"
			android:textColorHint="#9E9E9E"
			android:textSize="16sp" />

		<Button
			android:id="@+id/add2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Adicionar"
			android:textColor="#FFFFFF"
			android:textSize="12sp"
			android:textStyle="bold"
			android:visibility="gone" />

	</LinearLayout>

</LinearLayout>